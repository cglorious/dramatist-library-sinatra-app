<!doctype html>
<html>
  <head>
    <title><%= @play.name %></title>
    <style>
      hr.solid {
        border-top: 1px solid #bbb;
      }
      a.more-link:link {
        color: #0277bd;
        background-color: transparent;
      }
      a.more-link:visited {
        color: #0277bd;
        background-color: transparent;
      }
      .show-btns {
        background-color: #ADD8E6;
        padding: 2px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4x;
        transition-duration: 0.4s;
      }
      .show-btns:hover {
        background-color: #0277bd;
        color: white;
      }
      #show-menu {
        font-size: 14px;
        text-align: center;
      }
      .menu-btns {
        background-color: #C0C0C0;
        padding: 8px 18px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4x;
        transition-duration: 0.4s;
      }
      .menu-btns:hover {
        background-color: #0277bd;
        color: white;
      }
    </style>
  </head>
  <body>

    <h4> <%= @play.name %> </h4>
    <br>
      <p>Author: <%=@play.playwright.name %></p>
      <p>Genre: <%= @play.genre %></p>
      <p>Synopsis: <%= @play.synopsis %></p>

    <div>
    <% if @play.playwright_id == current_user.id %>
      <form action="/plays/<%= @play.id %>/edit" method="get">
        <input class="show-btns" type="submit" value="Edit Play">
      </form>

      <form action="/plays/<%= @play.id %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input class="show-btns" type="submit" value="Delete Play">
      </form>
    <% end %>
    </div>

    <!-- adjust visited link -->
    <a class= "more-link" href="/plays/more/<%= @play.id %>">More by <%= @play.playwright.name %></a>

    <hr class="solid">

    <div id="show-menu">
      <br>
      <a class="button" href="/plays"><button class="menu-btns">Home</button></a>
      <a class="button" href="/logout"><button class="menu-btns">Logout</button></a>
    </div>

  </body>
</html>
