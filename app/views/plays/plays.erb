<!doctype html>
<html>
  <head>
    <title>Plays</title>
    <style>
      div.welcome, .play-btn-container {
        text-align: center;
      }
      hr.solid {
        border-top: 1px solid #bbb;
      }
      a.play-link:link {
        color: #0277bd;
        background-color: transparent;
      }
    .play-btns {
      background-color: #ADD8E6;
      padding: 8px 18px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4x;
      transition-duration: 0.4s;
    }
    .play-btns:hover {
      background-color: #0277bd;
      color: white;
    }
    </style>
  </head>
  <body>

    <div class="welcome">
      <h4><em> Hello, <%= current_user.name %>!</em></h4>
    </div>
    <br>

    <!-- test bio conditional -->
    <h4> All about you. </h4>
    <br>
    <p><%= current_user.bio %></p>

    <hr class="solid">
    <br>

    <h4> Here are your plays, <%= current_user.name %>.</h4>
    <br>

    <% if current_user.plays.count == 0 %>
      <%= "Oh snap! It looks like you don't have any plays." %>
    <% else %>
      <ul>
        <% current_user.plays.each do |play| %>
        <div>
          <!-- test routes -->
          <a class= "play-link" href="/plays/<%= play.id %>"><li><%= play.name %></li></a>
          <br>
        </div>
        <% end %>
      </ul>
    <% end %>

    <div class="play-btn-container">
      <p><a class="button" href="/plays/new"><button class="play-btns">Add Play</button></a></p>
    </div>

    <hr class="solid">
    <br>
    <h4> All Plays by Title </h4>
      <br>
    <ul>
      <% Play.all.each do |play| %>
        <a class= "play-link" href="/plays/#{play.id}"><li><%= play.name %></li></a>
        <br>
        <% end %>
    </ul>

    <hr class="solid">
    <div class="play-btn-container">
      <br>
      <p><a class="button" href="/logout"><button class="play-btns">Logout</button></a></p>
    </div>

  </body>
</html>
