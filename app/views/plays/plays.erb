<!doctype html>
<html>
  <head>
    <title>Plays</title>
    <style>
      div.welcome, .play-btn-container {
        text-align: center;
      }
      hr.solid {
        border-top: 1px solid #bbb;
      }
    .play-btns {
      background-color: #ADD8E6;
      padding: 8px 18px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4x;
      transition-duration: 0.4s;
    }
    .play-btns:hover {
      background-color: #0277bd;
      color: white;
    }
    </style>
  </head>
  <body>

    <div class="welcome">
      <h4><em> Hello, <%= current_user.name %>!</em></h4>
    </div>
    <br>

    <h4> Here are your plays, <%= current_user.name %>.</h4>
    <br>

    <% if current_user.plays.count == 0 %>
      <%= "Oh snap! It looks like you don't have any plays." %>
    <% else %>
      <ul>
        <% current_user.plays.each do |play| %>
        <div>
          <li><%= play.name %></li>
        </div>
        <% end %>
      </ul>
      <br>
    <% end %>
    <!-- move "Add Play" button here? -->

    <br>
    <hr class="solid">
    <br>
    <h4> All Plays by Title </h4>
    <ul>
      <!-- add hyperlink for details of plays -->
      <!-- sort by alpha order -->
      <!-- add option by author -->
      <br>
      <% Play.all.each do |play| %>
        <li><%= play.name %></li>
        <% end %>
    </ul>

    <hr class="solid">
    <div class="play-btn-container">
      <!-- edit button styles -->
      <br>
      <p><a class="button" href="/plays/new"><button class="play-btns">Add Play</button></a></p>
      <p><a class="button" href="/logout"><button class="play-btns">Logout</button></a></p>
    </div>

  </body>
</html>
